<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mappaFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.skimap.MappaFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addRecordFAB"
        android:layout_width="63dp"
        android:layout_height="57dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        android:contentDescription="@string/addRecordFabContentDescription"
        android:src="@drawable/plus_icon"
        app:backgroundTint="@color/secondaryColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@android:color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/getPositionFAB"
        android:layout_width="63dp"
        android:layout_height="57dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="21dp"
        android:clickable="true"
        android:contentDescription="@string/getPositionFabContentDescription"
        android:src="@drawable/gps_icon"
        app:backgroundTint="@color/titleBarColor"
        app:layout_constraintBottom_toTopOf="@+id/addRecordFAB"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@android:color/white" />

    <org.osmdroid.views.MapView
        android:id="@+id/trackingMap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </org.osmdroid.views.MapView>

</androidx.constraintlayout.widget.ConstraintLayout>